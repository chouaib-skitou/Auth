# ========================================
# APPLICATION CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000

# ========================================
# DATABASE CONFIGURATION (MySQL)
# ========================================
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DATABASE=auth_system
DB_SYNCHRONIZE=true
DB_LOGGING=true

# ========================================
# JWT CONFIGURATION
# ========================================
# Generate secure secrets using:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

JWT_ACCESS_SECRET=your_64_character_secret_key_here
JWT_REFRESH_SECRET=your_64_character_secret_key_here
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# ========================================
# TOKEN EXPIRATION
# ========================================
EMAIL_VERIFICATION_TOKEN_EXPIRATION=1h
PASSWORD_RESET_TOKEN_EXPIRATION=20m

# ========================================
# EMAIL CONFIGURATION
# ========================================
# Option 1: MailHog (Local Development)
# MAIL_HOST=localhost
# MAIL_PORT=1025
# MAIL_USER=
# MAIL_PASSWORD=
# MAIL_FROM=noreply@yourdomain.com
# MAIL_FROM_NAME=Your App Name

# Option 2: Resend (Production)
MAIL_HOST=smtp.resend.com
MAIL_PORT=587
MAIL_USER=resend
MAIL_PASSWORD=re_your_resend_api_key
MAIL_FROM=onboarding@resend.dev
MAIL_FROM_NAME=Auth System

# ========================================
# URLs
# ========================================
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# ========================================
# EMAIL VALIDATION
# ========================================
EMAIL_VALIDATION_ENABLED=true

# Provider Options: 'zerobounce' or 'deep-validator'
EMAIL_VALIDATION_PROVIDER=deep-validator

# ZeroBounce API Key
# Get free 100/month at: https://www.zerobounce.net
ZEROBOUNCE_API_KEY=

# ========================================
# NOTES FOR DEVELOPERS
# ========================================
# 1. Copy this file to .env
# 2. Generate JWT secrets using the command above
# 3. Set up database credentials
# 4. For local dev: Use MailHog or Resend test domain